<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_expense_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:background="@drawable/ic_settle_oval"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_expense_overview_first_letter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:text="A"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_medium"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/text_margin">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_expense_overview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anita Chipkar"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_medium" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_expense_overview_spent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_expense_overview_name"
                    android:text="Spent Amount :"
                    android:textSize="@dimen/text_small"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_expense_overview_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_text_square"
                    android:fontFamily="sans-serif"
                    android:text="58000"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="normal" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="@dimen/text_margin"
            android:background="@color/colorLightBackground" />
    </LinearLayout>